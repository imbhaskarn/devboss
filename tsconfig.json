{
  "compilerOptions": {
    "target": "ESNext", // Adjust to the Node.js version you're targeting
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true,
    "types": [
      "jest",
      "node"
    ],
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "/src/*"
      ]
    },
    "typeRoots": [
      "./typings",
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "**/__tests__/",
    "src/typings/express/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "./coverage",
    "./dist",
    "jest.config.js"
  ]
}